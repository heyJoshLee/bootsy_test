<%=link_to "Back to all Posts", posts_path %>
<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <h2>Edit Post</h2>
    <%= form_for(@post) do |f| %>
      <%= f.bootsy_area :body, class: "form-control", rows: 10 %>
      <div class="row">
        <%= f.submit "Save Edit", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>